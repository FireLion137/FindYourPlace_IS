<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
        "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- Test suppressions -->
    <suppress checks="." files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="LineLength" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="AvoidStarImport" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="naming" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="FinalParameters" files=".*[\\/]src[\\/]test[\\/]"/>
    <!-- Suppression of the main class -->
    <suppress checks="[a-zA-Z0-9]*" files="FindYourPlaceApplication\.java"/>
    <!-- Others -->
    <suppress checks="DesignForExtension" files=".+\.(?:jar|zip|java|war|class|tar|bin)$"/>
    <suppress checks="MagicNumber" files=".+\.(?:jar|zip|java|war|class|tar|bin)$"/>
    <suppress checks="VisibilityModifier" files=".+\.(?:jar|zip|java|war|class|tar|bin)$" />
    <suppress checks="HiddenField" files="\.java"/>
</suppressions>
